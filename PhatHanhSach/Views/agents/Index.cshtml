@model IEnumerable<PhatHanhSach.Models.agent>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ĐẠI LÝ</h2>

<p>
    @Html.ActionLink("THÊM MỚI", "Create",null,new { @class="btn btn-primary"})

</p>
<table class="table table-hover">
    <tr>
        <th>
            TÊN ĐẠI LÝ
        </th>
        <th>
            ĐỊA CHỈ
        </th>
        <th>
            SỐ ĐIỆN THOẠI
        </th>
        <th>Thao Tác</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.addr)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.phone)
        </td>
        <td>
            @Html.ActionLink("Chỉnh sửa", "Edit", new { id=item.id },new {@class="btn btn-sm btn-warning" }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.id }, new {@class="btn btn-sm btn-primary" }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.id },new {@class="btn btn-sm btn-danger" }) |
            <a class="btn btn-sm btn-info" href="@Url.Action("Index","agent_storage",new { id=item.id })">Kho</a>
        </td>
    </tr>
}

</table>
