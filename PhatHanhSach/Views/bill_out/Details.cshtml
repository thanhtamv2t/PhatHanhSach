@model PhatHanhSach.Models.bill_out

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Chi Tiết Phiếu Xuất</h2>

<div>
<div class="row">
    <div class="col col-md-6">
        <h4>Hóa đơn xuất</h4>
        <table class="table table-striped">
            <tr>
                <td>Ngày xuất phiếu</td>
                <td>@Html.DisplayFor(model => model.date)</td>
            </tr>
            <tr>
                <td>Người xuất phiếu</td>
                <td>@Html.DisplayFor(model => model.rc)</td>
            </tr>
            <tr>
                <td>Tên đại lý</td>
                <td>@Html.DisplayFor(model => model.agent.name)</td>
            </tr>
        </table>
        <dl class="dl-horizontal text-left">
            <dt>
                Thành tiền
            </dt>

            <dd>
                @Html.DisplayFor(model => model.total)
            </dd>
        </dl>
    </div>
    <div class="col col-md-6">
        <h4>Chi Tiết Hóa Đơn</h4>
        <table class="table table-striped">
            <tr>
                <th>Tên Sách</th>
                <th>Đơn giá</th>
                <th>Số lượng</th>
            </tr>

            @foreach (var item in ViewBag.list)
            {
                <tr>
                    <td>@item.book.name</td>
                    <td>@item.book.price</td>
                    <td>@item.quantity</td>
                </tr>
            }
        </table>

    </div>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
