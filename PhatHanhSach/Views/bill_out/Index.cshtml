@model IEnumerable<PhatHanhSach.Models.bill_out>

@{
    ViewBag.Title = "Phiếu xuất";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Phiếu xuất</h2>

<p>
    @Html.ActionLink("Tạo phiếu xuất mới", "Create",null,new {@class="btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.total)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.rc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.agent.name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.total)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.rc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.agent.name)
        </td>
        <td>
            @Html.ActionLink("Chi tiết phiếu xuất", "Details", new { id=item.id }, new { @class="btn btn-sm btn-info" })
        </td>
    </tr>
}

</table>
